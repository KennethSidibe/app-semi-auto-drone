<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Mission</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/rooms-list.css" />
    <!-- Boostrap -->

    <!-- Boostrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- Boostrap Icons -->

    <!-- Tel Phone Input -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/intl-tel-input@20.1.0/build/css/intlTelInput.css"
    />
    <!-- Tel Phone Input -->

    <!-- Font awesome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- Font Awesome CDN -->
  </head>
  <body>
    <style>
      .icons-container p {
        margin: 0;
        line-height: 1;
        display: flex;
        align-items: center;
      }

      .container i {
        line-height: 1;
        vertical-align: middle;
      }

      .info-name {
        color: #0700cf;
      }
      .info-name + p {
        font-weight: 500;
      }
      .rounded-container {
        background-color: #ffffff;
      }
      body {
        background-color: #eff3f7;
      }
      .icons-text {
        font-size: 0.9em;
      }
      #chain-icon {
        display: inline-block;
        position: absolute;
        top: 5px;
        right: 20px;
      }
      a.profile-link {
        text-decoration: none;
        color: black;
      }
    </style>

    <div class="container">
      <div class="row d-flex flex-row">
        <!-- Profile Side Link -->
        <div class="col-3">
          <!-- Mission Quick View -->
          <div class="my-4 p-4 rounded-container rounded-4">
            <h6 class="mb-0"><%= mission.type %></h6>
            <p><%= mission.urgency %> urgency</p>

            <div
              class="icons-container pt-3 d-flex flex-row justify-content-between"
            >
              <p class="text-primary">
                <strong>Active: <%= mission.active ? 'Yes' : 'No' %></strong>
              </p>
            </div>
          </div>
          <!-- Mission Quick View -->

          <p class="" style="font-size: small">
            Access mission informations quickly here
          </p>

          <!-- Links -->
          <div class="my-4 py-2 px-4 rounded-container rounded-4">
            <a href="/view-missions" class="profile-link">
              <div class="d-flex flex-row justify-content-between fs-5">
                <div
                  class="icons-container d-flex flex-row gap-3 align-items-center"
                >
                  <i class="fa-solid fa-circle-plus"></i>
                  <p class="text-center icons-text">Back to missions</p>
                </div>
                <i class="fs-2 bi bi-arrow-right-short"></i>
              </div>
            </a>
          </div>
          <!-- Links -->
        </div>
        <!-- Profile Side Link -->

        <div class="col">
          <!-- Mission Info -->
          <div
            class="container my-4 p-4 rounded-container rounded-4"
            style="position: relative"
          >
            <div
              id="mission-icon"
              style="position: absolute; top: 8px; right: 10px"
              class="fs-2"
            >
              <%= mission.active ? 'ðŸŸ¢' : 'ðŸ”´' %>
            </div>
            <div class="d-flex flex-row">
              <div class="row w-100">
                <h3 class="mb-0"><%= mission.type %> Mission</h3>
                <p class="text-primary" style="margin-bottom: 0px">
                  Urgency: <%= mission.urgency %>
                </p>
                <p class="text-body-tertiary" style="margin-bottom: 0px">
                  Active: <%= mission.active ? 'Yes' : 'No' %>
                </p>
              </div>
            </div>

            <div class="row mt-5">
              <div class="d-flex flex-row justify-content-between my-4">
                <h3>Mission</h3>
                <a href="/update-mission">Modify</a>
              </div>

              <div class="d-flex flex-column w-75 mx-0">
                <!-- Drone Information -->
                <div class="col-12">
                  <h2>Drone Information</h2>
                  <p><strong>Drone Name:</strong> <%= drone.droneName %></p>
                  <p>
                    <strong>Drone Software:</strong> <%= drone.specsSoftVersion
                    %>
                  </p>
                  <p>
                    <strong>Serial Number:</strong> <%= drone.serialNumber %>
                  </p>
                </div>

                <!-- Flight Information -->
                <div class="col-12 mt-3">
                  <h2>Flight Information</h2>
                  <p><strong>Location:</strong> <%= drone.locationString %></p>
                  <p>
                    <strong>Battery Level:</strong> <%= drone.batteryLevel %> %
                  </p>
                  <p><strong>Pilot Name:</strong> <%= drone.pilotName %></p>
                  <p>
                    <strong>Armed:</strong> <%= drone.isArmed ? 'Yes' : 'No' %>
                  </p>
                </div>

                <!-- Payload Information -->
                <div class="col-12 mt-3">
                  <h2>Payload Information</h2>
                  <p><strong>Payload Name:</strong> <%= drone.payloadName %></p>
                  <p>
                    <strong>Payload Weight:</strong> <%= drone.payloadWeight %>
                    mg
                  </p>
                  <p>
                    <strong>Dimensions:</strong> <%=
                    drone.payloadDimensionsString %>
                  </p>
                </div>

                <!-- Team Information -->
                <div class="col-12 mt-3">
                  <h2>Team Information</h2>
                  <p><strong>Team Name:</strong> <%= team.teamName %></p>
                  <% if (team.teamLeader) { %>
                  <h3>Team Leader</h3>
                  <p><strong>Name:</strong> <%= team.teamLeader.name %></p>
                  <p><strong>Role:</strong> <%= team.teamLeader.role %></p>
                  <% } %>

                  <h3>Team Members</h3>
                  <% team.members.forEach(member => { %> <% if (!member.leader){ %>
                  <p>
                    <strong>Name:</strong> <%= member.name %>,
                    <strong>Role:</strong> <%= member.role %>
                  </p>
                  <% } %> <% }) %>
                </div>
              </div>
            </div>
          </div>
          <!-- Mission Info -->
        </div>

      </div>
    </div>

    <!-- Boostrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
