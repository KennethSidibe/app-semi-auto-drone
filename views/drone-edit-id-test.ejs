<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Room</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/rooms-list.css" />
    <!-- Boostrap -->

    <!-- Boostrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- Boostrap Icons -->

    <!-- Tel Phone Input -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/intl-tel-input@20.1.0/build/css/intlTelInput.css"
    />
    <!-- Tel Phone Input -->

    <!-- Font awesome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- Font Awesome CDN -->
  </head>

  <body>
    <style>
      .hotel-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .reservation-info-container {
        background-color: #dff5ffdc;
      }
      hr {
        opacity: 0.08;
        width: 85%;
      }
      .rounded-container {
        background-color: #ffffff;
        border-radius: 2rem;
        padding: 1.5rem;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
      }
      body {
        background-color: #eff3f7;
      }
      .hide {
        display: none;
      }
    </style>

    <div class="container w-75 rounded-container">
      <div class="d-flex flex-column">
        <div class="d-flex flex-row gap-2">
          <p><i class="bi bi-arrow-left"></i></p>
          <h5 class="text-primary">
            <a href="/drone?id=">Retour au drone</a>
          </h5>
        </div>
        <h3 class="mb-0">Modify Identification</h3>
        <p class="text-body-tertiary">Drone:</p>
      </div>

      <form
        action="/update-drone-id"
        id="modifyUserForm"
        method="post"
        class="mt-5"
      >
        <div class="row my-3">
          <h3 class="mb-3">Identitfications</h3>
          <div class="col-6">
            <label for="first name" class="form-label">Drone Name</label>
            <input
              type="text"
              class="form-control"
              id="droneNameInput"
              name="droneName"
              placeholder="BEAVER-91"
              value="Py"
            />
            <div
              id="droneNameError"
              class="hide form-text text-danger fw-medium"
            ></div>
          </div>

          <div class="col-6">
            <label for="pilot name" class="form-label">Pilot Name</label>
            <input
              type="text"
              class="form-control"
              id="pilotNameInput"
              name="lastName"
              placeholder="Sidibe"
              value="Kiri"
            />
            <div
              id="pilotNameError"
              class="hide form-text text-danger fw-medium"
            ></div>
          </div>
        </div>

        <div class="row mt-5">
          <div class="col-6">
            <label for="Email" class="form-label">Pilot Id</label>
            <input
              type="text"
              id="pilotIdInput"
              class="form-control"
              name="pilotId"
              placeholder="P-82AF"
              value="sdfs9342"
            />
            <div
              id="pilotIdError"
              class="hide form-text text-danger fw-medium"
            ></div>
          </div>

          <div class="col-6">
            <label for="Email" class="form-label">Serial Number</label>
            <input
              type="text"
              id="serialNumberInput"
              class="form-control"
              name="serialNumber"
              value="SN-A34FG"
              placeholder="SN-90PF"
            />
            <div
              id="serialNumberError"
              class="hide form-text text-danger fw-medium"
            ></div>
          </div>
        </div>

        <div class="row mt-4">
          <div
            class="d-flex mt-5 mb-2 flex-row justify-content-center align-items-center"
          >
            <button
              value="submit"
              id="submitFormBtn"
              class="btn btn-dark rounded-4"
            >
              Appliquer les changements
            </button>
          </div>
        </div>

      </form>
    </div>

    <!-- JQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- JQuery CDN -->

    <script src="js/validate-edit-drone-id.js"></script>

  </body>
</html>
