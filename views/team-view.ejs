<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Team</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/rooms-list.css" />
    <!-- Boostrap -->

    <!-- Boostrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- Boostrap Icons -->

    <!-- Tel Phone Input -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/intl-tel-input@20.1.0/build/css/intlTelInput.css"
    />
    <!-- Tel Phone Input -->

    <!-- Font awesome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- Font Awesome CDN -->
  </head>
  <body>
    <style>
      .icons-container p {
        margin: 0;
        line-height: 1;
        display: flex;
        align-items: center;
      }

      .container i {
        line-height: 1;
        vertical-align: middle;
      }

      .info-name {
        color: #0700cf;
      }
      .info-name + p {
        font-weight: 500;
      }
      .rounded-container {
        background-color: #ffffff;
      }
      body {
        background-color: #eff3f7;
      }
      .icons-text {
        font-size: 0.9em;
      }
      #chain-icon {
        display: inline-block;
        position: absolute;
        top: 5px;
        right: 20px;
      }
      a.profile-link {
        text-decoration: none;
        color: black;
      }
    </style>

    <div class="container">
        <div class="row d-flex flex-row">
            <!-- Sidebar for Quick Links or Overview -->
            <div class="col-3">
                <!-- Quick View for Mission Report -->
                <div class="my-4 p-4 rounded-container rounded-4">
                    <h6 class="mb-0">Team Overview</h6>
                    <p><%= team.team.teamName %></p>
                    <div class="icons-container pt-3 d-flex flex-row justify-content-between">
                        <p class="text-primary"><strong>Leader: <%= team.team.leaderName %></strong></p>
                    </div>
                </div>
                <p class="" style="font-size: small">Quick access to mission report info</p>
                <!-- Link back to mission reports listing -->
                <div class="my-4 py-2 px-4 rounded-container rounded-4">
                    <a href="/view-teams" class="profile-link">
                        <div class="d-flex flex-row justify-content-between fs-5">
                            <div class="icons-container d-flex flex-row gap-3 align-items-center">
                                <i class="fa-solid fa-circle-plus"></i>
                                <p class="text-center icons-text">Back to teams</p>
                            </div>
                            <i class="fs-2 bi bi-arrow-right-short"></i>
                        </div>
                    </a>
                </div>
            </div>
    
            <!-- Main Content Area -->
            <div class="col">

                <!-- Detailed Report View -->
                
                <div class="container my-4 p-4 rounded-container rounded-4" style="position: relative">

                    <div class="d-flex flex-row mb-5">
                        <div class="row w-100">
                            <h3 class="mb-0">Team</h3>
                            <p class="text-primary" style="margin-bottom: 0px">Team Name : <%= team.team.teamName %></p>
                            <p class="text-body-tertiary" style="margin-bottom: 0px">Team Leader: <%= team.team.leaderName %></p>
                        </div>
                    </div>

                    <div class="d-flex flex-row justify-content-between">
                        <h3>Team Details</h3>
                        <a href="/update-team?id=<%= id %>">Modify</a>
                    </div>
                    <p class="mb-0" ><strong>Team Name:</strong> <%= team.team.teamName %></p>
                    <p><strong>Team Leader:</strong> <%= team.team.leaderName %></p>

                
                    <!-- Team Leader Details -->
                    <% if (team.team.teamLeader) { %>
                        <div class="my-5" >
                            <h4>Team Leader</h4>
                            <p><strong>Leader Name:</strong> <%= team.team.teamLeader.name %></p>
                            <p><strong>Leader Role:</strong> <%= team.team.teamLeader.role %></p>
                            <% let leaderStartedYear = team.team.getMemberStartedAtString(team.team.teamLeader) %>
                            <p><strong>Started At:</strong> since <%= leaderStartedYear %></p>
                        </div>
                    <% } %>
                
                    <!-- Team Members Details -->
                    <h4 class="mb-3" >Team Members</h4>
                    <% team.team.members.forEach(member => { 
                        if (!member.leader) { %>
                            <div class="my-5">
                                <h3 class="text-primary" ><%= member.name %></h3>
                                <div>
                                    <p><strong>Member Name:</strong> <%= member.name %></p>
                                    <p><strong>Member Role:</strong> <%= member.role %></p>
                                    <% let memberStartedAtString = team.team.getMemberStartedAtString(member); %>

                                    <p><strong>Member Started At:</strong> since <%= memberStartedAtString %></p>
                                </div>
                            </div>
                    <% }}) %>
                    </div>





                </div>

            </div>
        </div>
    </div>
    

    <!-- Boostrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
