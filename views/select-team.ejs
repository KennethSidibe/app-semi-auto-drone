<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select team</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/rooms-list.css" />
    <!-- Boostrap -->

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Calistoga&family=Kantumruy+Pro:ital,wght@0,100..700;1,100..700&family=Martian+Mono:wght@100..800&family=Sorts+Mill+Goudy:ital@0;1&display=swap"
      rel="stylesheet"
    />
    <!-- End fonts -->

    <!-- Tel Phone Input -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/intl-tel-input@20.1.0/build/css/intlTelInput.css"
    />
    <!-- Tel Phone Input -->

    <!-- Boostrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!-- Boostrap Icons -->

    <style>
      body {
        background-color: #eff3f7;
      }
      .rounded-container {
        background-color: #ffffff;
      }
      .price {
        font-family: "Martian Mono", monospace;
        font-optical-sizing: auto;
        font-weight: 300;
        font-style: normal;
        font-variation-settings: "wdth" 100;
      }

      .card-room {
        position: relative;
        transition: border 0.4s ease-in-out;
      }
      .card-room.not-clicked:hover {
        box-sizing: border-box;
        border: 5px solid #0d6efd;
        border-radius: 0.375rem;
      }
      .card-room.fades-out {
        border: 1px solid rgba(0, 0, 0, 0.176);
      }
      .card-room.clicked {
        box-sizing: border-box;
        border: 5px solid #0d6efd;
        border-radius: 0.375rem;
      }
      .icon-container {
        position: absolute;
        bottom: 10px;
        right: 10px;
      }
      .hide {
        display: none;
      }
      .card-room.disabled {
        opacity: 0.5;
      }
      .card-title.disabled {
        color: #909294;
      }
      .price.disabled {
        color: #6e84a4 !important;
      }
      .hide {
        display: none;
      }
      .blur {
        filter: blur(5px);
      }
      .card-image {
        overflow: hidden;
      }
    </style>
  </head>

  <body>
    <div class="container w-75">
      <div class="col">
        <div class="container my-4 p-4 rounded-container rounded-4">
          <div class="mb-5 d-flex flex-column">
            <div class="d-flex flex-row gap-2">
              <p><i class="bi bi-arrow-left"></i></p>
              <h5 class="text-primary">
                <a href="/">Back to profile</a>
              </h5>
            </div>
            <div class="row">
              <h3 class="mb-0">Select a team</h3>
              <p class="text-body-tertiary">
                User: <%= user.firstName %> <%= user.lastName %>
              </p>
            </div>
          </div>

          <div class="container rooms-card">
            <h3>Teams</h3>
            <div class="row row-cols-3 gy-3">
              <% teams.forEach((team, index) => { %>

              <div class="col">
                <div class="card card-room not-clicked">
                  <img
                    src="images/select-team.jpg"
                    class="card-img-top img-fluid"
                    alt="Mission Image"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Team: <%= team.team.teamName %></h5>
                    <p class="price">Leader: <%= team.team.leaderName %></p>
                    <!-- Link to a route that handles viewing or editing the mission -->
                    <a href="/team?id=<%= index %>" class="btn btn-primary"
                      >View team</a
                    >
                  </div>
                </div>
              </div>

              <% }) %>

              <!-- Add Mission Report Btn -->
              <div class="col">
                <div class="card card-room text-bg-success" id="add-room-card">
                  <div class="card-image">
                    <img
                      src="images/select-team.jpg"
                      class="card-img-top img-fluid blur"
                      alt="..."
                    />
                  </div>
                  <div class="card-body">
                    <h5 class="card-title">Team Name: ###</h5>
                    <p class="price">Leader: ###</p>
                    <a href="#"
                      ><button class="btn btn-light">Add Team</button></a
                    >
                  </div>
                </div>
              </div>
              <!-- Add Team Btn -->
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- JQuery CDN -->
  </body>
</html>
